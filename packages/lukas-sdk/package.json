{
  "name": "@lukas-protocol/sdk",
  "version": "0.1.5",
  "description": "TypeScript SDK for interacting with the Lukas Protocol smart contracts",
  "keywords": [
    "lukas",
    "protocol",
    "defi",
    "stablecoin",
    "ethereum",
    "typescript",
    "web3",
    "sdk"
  ],
  "author": "Lukas Protocol Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hashpass-tech/lukas-protocol.git",
    "directory": "packages/lukas-sdk"
  },
  "homepage": "https://lukas.money",
  "bugs": {
    "url": "https://github.com/hashpass-tech/lukas-protocol/issues"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "release": "node scripts/release.js",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "dependencies": {
    "ethers": "^6.8.0",
    "viem": "^1.19.0",
    "wagmi": "^1.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@vitest/coverage-v8": "^0.34.0",
    "eslint": "^8.50.0",
    "fast-check": "^3.13.0",
    "jsdom": "^27.3.0",
    "terser": "^5.20.0",
    "typescript": "^5.2.0",
    "vite": "^4.4.0",
    "vite-plugin-dts": "^3.6.0",
    "vitest": "^0.34.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
